<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/verticalScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/mySearchView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_gravity="center">

                <!-- Explore Label -->
                <TextView
                    android:id="@+id/exploreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>



                <!-- Switch -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/pageSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_gravity="center"/>

                <!-- Feed Label -->
                <TextView
                    android:id="@+id/feedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feed"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutVertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textExplore"
                app:layout_constraintVertical_bias="0.043">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"

                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/profileIcon"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_profile"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:id="@+id/ProfileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:text="Avitra Phon"
                                android:textColor="#282828"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/restaurantLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ProfileName"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/restaurantIcon"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:src="@drawable/location_on"
                                android:layout_marginLeft="12dp"/>

                            <TextView
                                android:id="@+id/restaurantName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Fuel Plus"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView

                            android:layout_width="385dp"
                            android:layout_height="142dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/food3t4app" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="0dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressTint="#FFD700"
                                android:rating="4.5"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:stepSize="0.5" />

                            <ImageView
                                android:id="@+id/likeButton"
                                android:src="@drawable/like_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Like"
                                android:layout_marginTop="13dp"/>

                            <TextView
                                android:id="@+id/NumLikes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="14"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="20dp"
                                android:textSize="11sp" />

                            <ImageView
                                android:id="@+id/shareButton"
                                android:src="@drawable/baseline_ios_share_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share"
                                android:layout_marginTop="13dp" 
                                android:layout_marginStart="40dp"/>
                            
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textReview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Amazing food and great atmosphere!"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:id="@+id/orSeparatorView"
                android:layout_width="380dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@color/darkGrey"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintTop_toBottomOf="@+id/textExplore"
                app:layout_constraintVertical_bias="0.043">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/profileIcon2"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_profile"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="6dp"/>

                            <TextView
                                android:id="@+id/ProfileName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:text="Avitra Phon"
                                android:textColor="#282828"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/restaurantLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ProfileName"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/restaurantIcon2"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:src="@drawable/location_on"
                                android:layout_marginLeft="12dp"/>

                            <TextView
                                android:id="@+id/restaurantName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Fuel Plus"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView

                            android:layout_width="385dp"
                            android:layout_height="142dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/food3t4app" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="0dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressTint="#FFD700"
                                android:rating="4.5"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:stepSize="0.5" />

                            <ImageView
                                android:id="@+id/likeButton2"
                                android:src="@drawable/like_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Like"
                                android:layout_marginTop="13dp"/>

                            <TextView
                                android:id="@+id/NumLikes2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="14"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="20dp"
                                android:textSize="11sp" />

                            <ImageView
                                android:id="@+id/shareButton2"
                                android:src="@drawable/baseline_ios_share_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share"
                                android:layout_marginTop="13dp"
                                android:layout_marginStart="40dp"/>

                        </LinearLayout>



                        <TextView
                            android:id="@+id/textReview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Amazing food and great atmosphere!"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:id="@+id/orSeparatorView2"
                android:layout_width="380dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@color/darkGrey"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>